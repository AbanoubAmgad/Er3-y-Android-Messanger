<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.erghy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/erghy"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.erghy.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- All Accounts Activity -->
        <activity
            android:name=".LoginActivity"
            android:label="all Accounts" >
        </activity>
        
        <!-- Chat Activity -->
        <activity
            android:name=".ChatBox"
            android:label="Chat Box" >
        </activity>
        
        <!-- Adding Activity -->
        <activity
            android:name=".AddContact"
            android:label="Add Contact" >
        </activity>
        
        <!-- Contact Activity -->
        <activity
            android:name=".ContactListView"
            android:label="Contact List" >
        </activity>
        
        
        <!-- FriendsList Activity -->
        <activity
            android:name=".FriendsList"
            android:label="Friends List" >
        </activity>
        
        <!-- Client Activity -->
        <activity
            android:name=".ClientActivity"
            android:label="Client Accounts" >
        </activity>
 
        <!-- Add Account Activity -->
        <activity
            android:name=".NewAccountActivity"
            android:label="Add New Account" >
        </activity>
 
        <!-- Edit Account Activity -->
        <activity
            android:name=".EditAccountActivity"
            android:label="Edit Account" >
        </activity>
    </application>
  <!--  Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>
